# Example .env.local for local development
# Copy this to .env.local and update the values

# MinIO Example (local S3-compatible storage)
ACCESS_KEY_ID=minioadmin
SECRET_ACCESS_KEY=minioadmin
BUCKET_NAMES=uploads-123,documents-456,media-789
FRIENDLY_BUCKET_NAMES=uploads,documents,media
ENDPOINT=http://localhost:9000
REGION=us-east-1

# AWS S3 Example (uncomment to use)
# ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
# SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
# BUCKET_NAMES=my-bucket-1,my-bucket-2
# ENDPOINT=https://s3.amazonaws.com
# REGION=us-east-1

# DigitalOcean Spaces Example (uncomment to use)
# ACCESS_KEY_ID=DO_SPACES_KEY
# SECRET_ACCESS_KEY=DO_SPACES_SECRET
# BUCKET_NAMES=my-space-1,my-space-2
# ENDPOINT=https://nyc3.digitaloceanspaces.com
# REGION=nyc3

# Authentication - change this to something secure!
PRIVATE_TOKEN=your_secure_password_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=1800000
RATE_LIMIT_MAX_REQUESTS=10

# Redis (optional)
REDIS_URL=redis://localhost:6379
